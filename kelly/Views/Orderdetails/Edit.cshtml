@model kelly.Models.OrderDetails

@{
    ViewData["Title"] = "Edit";
}

<body style="background-color: #f1e4bcff;">
<h1>Edit</h1>

<h4>Order Details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderDetailsID" />
            <div class="form-group">
                <label asp-for="OrdersID" class="control-label"></label>
                <select asp-for="OrdersID" class="form-control" asp-items="ViewBag.OrdersID"></select>
                <span asp-validation-for="OrdersID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductID" class="control-label"></label>
                <select asp-for="ProductID" class="form-control" asp-items="ViewBag.ProductID"></select>
                <span asp-validation-for="ProductID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Qty" class="control-label"></label>
                <input asp-for="Qty" class="form-control" />
                <span asp-validation-for="Qty" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <input style="background-color:#3c763d;"  type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

    <div style="padding-top:20px;">
        <a class="custom-button" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>