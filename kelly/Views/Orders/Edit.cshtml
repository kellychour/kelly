@model kelly.Models.Orders

@{
    ViewData["Title"] = "Edit";
}
<body style="background-color: #f1e4bcff;">
<h1>Edit</h1>

<h4>Orders</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrdersID" />
            <div class="form-group">
                <label asp-for="OrdersID" class="control-label"></label>
                <input asp-for="OrdersID" class="form-control" />
                <span asp-validation-for="OrdersID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
            <div class="form-group">
                <label asp-for="OrderTime" class="control-label"></label>
                <input asp-for="OrderTime" class="form-control" />
                <span asp-validation-for="OrderTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PickupTime" class="control-label"></label>
                <input asp-for="PickupTime" class="form-control" />
                <span asp-validation-for="PickupTime" class="text-danger"></span>
            </div>

            <!--Creates a dropdown list of options-->
            <div class="form-group">
                <label asp-for="OrderStatus" class="control-label"></label>
                <select select asp-for="OrderStatus" class="form-control">
                    <option value="">Admin Use Only</option>
                    <option value="Requested">Request recieved</option>
                    <option value="Approved">Approved</option>
                    <option value="Awaiting Payment">Payment pending</option>
                    <option value="In Progress">Cooking</option>
                    <option value="Complete">Completed</option>
                    <option value="Cancelled">Cancelled</option>
                </select>
                <span asp-validation-for="OrderStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <input style="background-color:#3c763d;" type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="padding-top:20px;">
        <a class="custom-button" asp-action="Index">Back to List</a>
</div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
